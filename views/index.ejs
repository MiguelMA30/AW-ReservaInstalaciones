<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
    crossorigin="anonymous"></script>
  <title>UCM_RIU</title>
</head>

<body>

 <%- include('navbar') %>

<!--Pagina principal con todos las tarjetas de las instalaciones-->
  <div id="contenido" class="d-flex flex-column mt-5">


    <div id="salas" class="w-100 mt-5">

      <% for( let index=0; index < Math.ceil(filas.length/3); index++ ) { %>
        <div class="row w-100">
          <% for( let j=0; j < 3 ; j++ ) { %>
            <% if (index*3+j <filas.length) { %>
              <%- include('card',{element:filas[index*3+j], i:index*3+j}) %>
                <% } %>
                  <% } %>
        </div>
        <% } %>

    </div>
  </div>
<!--si somos admin vemos la opcion de aÃ±adir instalacioens-->
  <% if (usuario.rol) { %>
    <div class="agregar mb-5">
      <button id="btn-add" class="btn" data-bs-toggle="modal" data-bs-target="#addInst">

        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
          class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>

      </button>
    </div>
    <% } %>



      <%- include('footer') %>

        <%-include('modals')%>

</body>




<script>

  document.getElementById('btn-config').addEventListener('click', function () {
    var dropdownContent = document.querySelector('.dropdown-content');
    dropdownContent.style.display = dropdownContent.style.display === 'none' ? 'block' : 'none';
  });


</script>







</html>